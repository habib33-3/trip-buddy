generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TripStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  password String
  role     String  @default("USER")
  image    String?
  initials String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Trip      Trip[]
}

model Trip {
  id          String   @id @default(uuid())
  title       String
  description String
  status      TripStatus @default(PLANNED)

  startDate   DateTime
  endDate     DateTime

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
