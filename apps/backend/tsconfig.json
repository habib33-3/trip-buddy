{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "skipDefaultLibCheck": true,
    "downlevelIteration": true,
    "lib": ["ES2023", "dom"],
    "noEmitOnError": true,
    "baseUrl": ".",
    "paths": {
      "@/utils/*": ["src/utils/*"],
      "@/config/*": ["src/config/*"],
      "@/lib/*": ["src/lib/*"],
      "@/services/*": ["src/app/services/*"],
      "@/validations/*": ["src/app/validations/*"],
      "@/controllers/*": ["src/app/controllers/*"],
      "@/shared/*": ["src/shared/*"],
      "@/app/*": ["src/app/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.mjs", "dist", "scripts/**/*"]
}
